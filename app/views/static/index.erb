<form id="url_form", action="/urls" method="post">
	LONG URL:<br>

	<input type="text" name="long_url" placeholder="paste a link shorten it">
	<input type="submit" name="Submit"><br>
	<p id="error_message"><%= @error %></p>
</form>

<% if @current_url != nil %>
	<p><%= @current_url.long_url %></p>
	<a href="<%= @current_url.short_url %>">http://localhost:9393/<%= @current_url.short_url %></a>
<% end %>
<br>

<h2>all lists</h2>

<div id='flash'>
<% if @urls != nil %>
  <table border="1">
  <tr><th>short url</th><th>long url</th><th>click count</th></tr>
	<% @urls.each { |url| %>
 		<tr>
 			<td><a href="<%=url.short_url%>">http://localhost:9393/<%= url.short_url %> </a></td>
 			<td><a href="<%=url.long_url%>">http://localhost:9393/<%= url.long_url %> </a></td>
 			<td><%=url.click_count %></td>
 		</tr>
	<% } %>
	</table>
<% end %>
</div>
